@page "/"
@using Microsoft.AspNetCore.Identity;
@using Expense_Tracking.Areas.Identity.Pages.Account;
@model LoginModel

@{
    ViewData["Title"] = "HomePage";
}

<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" />
        <link rel="stylesheet" href="/css/Index/TrianglesStyle.css" />
    </head>
    <body>
        @* Проверка аутентификации пользователя *@
        @if (User.Identity?.IsAuthenticated ?? false)
        {
            Response.Redirect("/Account/UserAccount");
        }

        @* Фон страницы *@
        <div>
            <div class="shadow">
                <div class="trg-1 animate-up-1"></div>
            </div>
            <div class="shadow">
                <div class="trg-2 animate-up-2"></div>
            </div>
            <div class="shadow">
                <div class="trg-4 animate-up-4"></div>
            </div>
            <div class="shadow">
                <div class="trg-3 animate-up-3"></div>
            </div>
            <div class="shadow">
                <div class="trg-5 animate-up-5"></div>
            </div>
            <div class="shadow">
                <div class="trg-9 animate-up-9"></div>
            </div>
            <div class="shadow">
                <div class="trg-8 animate-up-8"></div>
            </div>
            <div class="shadow">
                <div class="trg-6 animate-up-6"></div>
            </div>
            <div class="shadow">
                <div class="trg-7 animate-up-7"></div>
            </div>
            <div class="shadow">
                <div class="trg-10 animate-up-10"></div>
            </div>
            <div class="shadow">
                <div class="trg-14 animate-up-14"></div>
            </div>
            <div class="shadow">
                <div class="trg-13 animate-up-13"></div>
            </div>
            <div class="shadow">
                <div class="trg-11 animate-up-11">
                    <span class="text-left">Expense</span>
                    <span class="text-right">Tracking</span>
                </div>
            </div>
            <div class="shadow">
                <div class="trg-12 animate-up-12"></div>
            </div>
            <div class="shadow">
                <div class="trg-15 animate-up-15"></div>
            </div>
            <div class="shadow">
                <div class="trg-16 animate-up-16"></div>
            </div>
            <div class="shadow">
                <div class="trg-19 animate-up-19"></div>
            </div>
            <div class="shadow">
                <div class="trg-17 animate-up-17"></div>
            </div>
            <div class="shadow">
                <div class="trg-18 animate-up-18"></div>
            </div>
        </div>

        @* Форма входа *@
        <section>
            <form id="account" method="post" asp-page-handler="Login">
                <input asp-for="ReturnUrl" type="hidden" />
                <div class="inForm">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.Email" class="form-label"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                        <label asp-for="Input.Password" class="form-label"></label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div>
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe" class="form-label">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                    </div>
                    <div>
                        <span>
                            <a href="/ForgPass">Forgot your password?</a>
                        </span>
                        <p>
                            <a href="/Register" >Register as a new user</a>
                        </p>
                    </div>
                </div>
            </form>
        </section>
    </body>
</html>